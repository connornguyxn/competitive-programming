{
    "tasks": [
        {
            "label": "Run Python file",
            "command": "python ${file} && exit",
            "type": "shell",
            "group": {
                "kind": "build",
            },
        },
        {
            "label": "Create new file from template",
            "command": "python .\\new_file.py",
            "type": "shell",
            "presentation": {
                "focus": true,
            },
        },
        {
            "type": "cppbuild",
            "label": "Build active file (Debug Build)",
            "command": "g++",
            "args": [
                "-std=c++14",
                
                // enable most of the important warnings
                "-Wall",
                "-Wextra",
                // "-pedantic",
                // "-Wshadow",
                // "-Wformat=2",
                // "-Wfloat-equal",
                // "-Wconversion",
                // "-Wlogical-op",
                // "-Wshift-overflow=2",
                // "-Wduplicated-cond",
                // "-Wcast-qual",
                // "-Wcast-align",
                
                // show included headers
                // "-H",
                
                //* https://codeforces.com/blog/entry/15547
                // compiler debug macros
                "-D_GLIBCXX_DEBUG",
                "-D_GLIBCXX_DEBUG_PEDANTIC",
                
                // universal replacements for a sanitizer
                // "-lmcheck",
                // "-ftrapv",
                
                // increasing stack size
                "-Wl,--stack=66060288",
                
                "-fdiagnostics-color=always",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
            },
            "presentation": {
                "showReuseMessage": false,
            }
            "detail": "compiler: g++"
        },
        {
            "type": "cppbuild",
            "label": "Build active file (Normal Build)",
            "command": "g++",
            "args": [
                "-std=c++14",
                "-Wall",
                "-Wextra",
                "-Wl,--stack=66060288",
                "-fdiagnostics-color=always",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
            },
            "presentation": {
                "showReuseMessage": false,
            }
            "detail": "compiler: g++"
        },
        {
            "type": "shell",
            "label": "Run .exe at location",
            "command": ".\\${fileBasenameNoExtension}.exe",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
            "presentation": {
                "panel": "dedicated",
                "clear": true,
                "showReuseMessage": false,
            }
        },
        {
            "label": "Rescan workspace",
            "command": "${command:C_Cpp.RescanWorkspace}"
        },
        {
            "label": "Build and run active file",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build active file (Debug Build)",
                "Run .exe at location",
            ],
        },
    ],

}